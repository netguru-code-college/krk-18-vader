<p id="notice"><%= notice %></p>
<h2 class="display-2"></h2>
<p>
  Name: <%= @user.name %>
</p> 
<p>
  Email: <%= @user.email %>
</p>
<p>
  Homeplanet: <%= @user.homeplanet %>
</p>
<p>
  Birthday: <%= @user.birthday %>
</p>
<p>
  Missions: <%= @user.missions %>
