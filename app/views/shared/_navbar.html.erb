<nav class="navbar navbar-dark bg-secondary" style="background-color: #e3f2fd;">
  <%= link_to root_path, class: "nav-headline" do %>
    <h1><%= image_tag "favicon.png", size: "50x50" %> Colonizer</h1>
  <% end %>

  <div class="dropdown">
    <% if user_signed_in? %>
      <div>
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.email %>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Map", colonies_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <button type="button" class="btn btn-primary btn-lg" disabled>Please log in to your account!</button>
    <% end %>
  </div>
</nav>
