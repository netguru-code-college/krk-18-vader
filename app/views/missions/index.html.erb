<p id="notice"><%= notice %></p>
<%= link_to "New Mission", new_mission_path, class: "btn btn-outline-secondary float-right" %><br>

<h1 class="badge badge-secondary">Missions</h1><br>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="container">
    <% @missions.each do |mission| %>
      <ul class="list-group">
        <li class="list-group-item list-group-item-light"><%= link_to mission.name, mission %></li>
      </ul>
    <% end %>
</div>

<br>

