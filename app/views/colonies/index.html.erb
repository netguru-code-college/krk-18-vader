<div class="row">
  <div class="col-6 colonies-col">
    <p id="notice"><%= notice %></p>
    <h1 class="display-3">Colonies</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Colony</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @colonies.each do |colony| %>
          <tr>
            <td><%= link_to colony.name, colony %></td>
            <td><%= link_to 'Edit', edit_colony_path(colony), :class => "btn btn-info" %></td>
            <td><%= link_to 'Destroy', colony, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-12 d-flex justify-content-end">
      <%= link_to 'New Colony', new_colony_path, :class => "btn btn-primary" %>
    </div>
  </div>
  <div class="col-6 colonies-col">
    <div id="g-map-index" class="g-map-show-colony"></div>
  </div>
</div>